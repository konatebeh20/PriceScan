# Configuration de production pour PriceScan API
ENVIRONMENT=production

# Configuration du scraping automatique
SCRAPING_ENABLED=true
SCRAPING_DEBUG=false

# Intervalles de scraping (en secondes)
# Production: 5 jours (432000 secondes)
SCRAPING_CARREFOUR_INTERVAL=432000
SCRAPING_ABIDJANMALL_INTERVAL=432000
SCRAPING_PROSUMA_INTERVAL=432000
SCRAPING_PLACE_INTERVAL=432000
SCRAPING_JUMIA_INTERVAL=432000

# Activation des magasins
SCRAPING_CARREFOUR_ENABLED=true
SCRAPING_ABIDJANMALL_ENABLED=true
SCRAPING_PROSUMA_ENABLED=true
SCRAPING_PLACE_ENABLED=true
SCRAPING_JUMIA_ENABLED=true

# Configuration des logs
SCRAPING_LOG_LEVEL=INFO
SCRAPING_LOG_FILE=logger/auto_scraper.log

# Configuration des notifications
SCRAPING_NOTIFICATIONS_ENABLED=true

# Configuration de la base de donn√©es
SCRAPING_BATCH_SIZE=100
SCRAPING_COMMIT_INTERVAL=50
SCRAPING_DB_TIMEOUT=30

# Configuration des erreurs
SCRAPING_MAX_CONSECUTIVE_ERRORS=5
SCRAPING_ERROR_COOLDOWN=300
SCRAPING_RETRY_DELAY=60
