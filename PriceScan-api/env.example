# Configuration de l'application
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=votre_cle_secrete_tres_longue_et_complexe_ici
BASE_URL=/api/v1

# Configuration de la base de donn√©es
DATABASE_URL=sqlite:///pricescan.db
# Pour MySQL: mysql+pymysql://username:password@localhost:3306/pricescan
# Pour PostgreSQL: postgresql://username:password@localhost:5432/pricescan

# Configuration JWT
JWT_SECRET_KEY=votre_cle_jwt_secrete_tres_longue_et_complexe_ici
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# Configuration CORS
CORS_ORIGINS=http://localhost:8101,http://localhost:3000,capacitor://localhost
CORS_SUPPORTS_CREDENTIALS=True

# Configuration Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Configuration des uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Configuration Sentry (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Configuration des emails (optionnel)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuration des notifications push (optionnel)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_AUTH_KEY=your-apns-auth-key

# Configuration des limites de taux
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_OPTIONS=connection_pool_size=10

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
